<p id="notice"><%= notice %></p>

<h1>Riders</h1>

<table class="bordered striped centered responsive-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Qualification</th>
      <th>Work experience</th>
      <th>Ice number</th>
      <th>Cnic</th>
      <th>Driving license</th>
      <th>Reg copy</th>
      <th>Cv</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @riders.each do |rider| %>
      <tr>
        <td><%= rider.name %></td>
        <td><%= rider.email %></td>
        <td><%= rider.phone %></td>
        <td><%= rider.gender %></td>
        <td><%= rider.age %></td>
        <td><%= rider.qualification %></td>
        <td><%= rider.work_experience %></td>
        <td><%= rider.ice_number %></td>
        <td><%= rider.cnic %></td>
        <td><%= rider.driving_license %></td>
        <td><%= rider.reg_copy %></td>
        <td><%= rider.cv %></td>
        <td><%= link_to 'Show', rider %></td>
        <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
        <td><%= link_to 'Destroy', rider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Rider', new_rider_path, class: "btn waves-effect waves-light" %>
