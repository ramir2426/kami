<p id="notice"><%= notice %></p>

<h1>Salesmen</h1>

<table class="bordered striped centered responsive-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Qualification</th>
      <th>Work experience</th>
      <th>Cv</th>
      <th>Job type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salesmen.each do |salesman| %>
      <tr>
        <td><%= salesman.name %></td>
        <td><%= salesman.email %></td>
        <td><%= salesman.phone %></td>
        <td><%= salesman.gender %></td>
        <td><%= salesman.age %></td>
        <td><%= salesman.qualification %></td>
        <td><%= salesman.work_experience %></td>
        <td><%= salesman.cv %></td>
        <td><%= salesman.job_type %></td>
        <td><%= link_to 'Show', salesman %></td>
        <td><%= link_to 'Edit', edit_salesman_path(salesman) %></td>
        <td><%= link_to 'Destroy', salesman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Salesman', new_salesman_path, class: "btn waves-effect waves-light"%>
